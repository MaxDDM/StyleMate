<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_bottom_sheet_rounded"
    android:paddingTop="20dp">

    <!-- Кнопка Сбросить -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnReset"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Сбросить"
        android:textColor="#5C5C5C"
        android:textSize="18sp"
        android:fontFamily="@font/ttcommons_regular"
        android:backgroundTint="#F3F3F3"
        app:cornerRadius="20dp"
        app:elevation="0dp"
        android:stateListAnimator="@null"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/btnReset"
        app:layout_constraintBottom_toTopOf="@id/btnApply"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- ТИП ОДЕЖДЫ -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Тип одежды"
                android:textSize="28sp"
                android:textColor="#000000"
                android:fontFamily="@font/ttcommons_regular"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="4dp"/>

            <!-- columnCount="3" - ДЕЛАЕТ ВСЮ РАБОТУ ЗА НАС -->
            <GridLayout
                android:id="@+id/gridTypes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:orientation="horizontal" />

            <!-- ЦВЕТ -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Цвет"
                android:textSize="28sp"
                android:textColor="#000000"
                android:fontFamily="@font/ttcommons_regular"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="4dp"/>

            <GridLayout
                android:id="@+id/gridColors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:orientation="horizontal" />

            <!-- СЕЗОН -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сезон"
                android:textSize="28sp"
                android:textColor="#000000"
                android:fontFamily="@font/ttcommons_regular"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="4dp"/>

            <GridLayout
                android:id="@+id/gridSeasons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:orientation="horizontal" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Кнопка Применить -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnApply"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:text="Применить"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:fontFamily="@font/ttcommons_regular"
        android:textColor="#5C5C5C"
        android:backgroundTint="#F3F3F3"
        app:cornerRadius="25dp"
        app:elevation="0dp"
        android:stateListAnimator="@null"
        android:paddingHorizontal="40dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>