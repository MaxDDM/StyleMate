<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="24dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Текст вопроса -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/ttcommons_regular"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:text="Вы уверены, что хотите\nудалить подборку?"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Кнопка УДАЛИТЬ (Светлая) -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnConfirmDelete"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_button_oval_light"
            android:fontFamily="@font/ttcommons_regular"
            android:text="Удалить"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="18sp" />

        <!-- Кнопка ОТМЕНИТЬ (Темная) -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCancelDelete"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_button_oval_dark"
            android:fontFamily="@font/ttcommons_regular"
            android:text="Отменить"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>