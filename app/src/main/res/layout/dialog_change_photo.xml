<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="380dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Заголовок -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сменить фото профиля"
            android:textColor="#9E9E9E"
            android:textSize="20sp"
            android:fontFamily="@font/ttcommons_regular"/>

        <!-- Аватарка (текущая) -->
        <androidx.cardview.widget.CardView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="65dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/imgDialogAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/avatar" /> <!-- Твоя картинка -->
        </androidx.cardview.widget.CardView>

        <!-- Кнопка Галерея -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGallery"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_button_oval_light"
            android:text="Выбрать из галереи"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:layout_marginBottom="12dp"/>

        <!-- Кнопка Камера -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCamera"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_button_oval_light"
            android:text="Сделать фото"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:layout_marginBottom="12dp"/>

        <!-- Кнопка Отмена -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_button_oval_dark"
            android:text="Отменить"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>