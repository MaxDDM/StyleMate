<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingStart="4dp"
    android:paddingEnd="0dp">


    <!-- Название коллекции -->
    <TextView
        android:id="@+id/tvCollectionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ttcommons_regular"
        android:text="Название подборки"
        android:textColor="#595959"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Линия подчеркивания -->
    <View
        android:id="@+id/lineSeparator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="#595959"
        app:layout_constraintEnd_toEndOf="@id/tvCollectionName"
        app:layout_constraintStart_toStartOf="@id/tvCollectionName"
        app:layout_constraintTop_toBottomOf="@id/tvCollectionName" />

    <!-- 4. СТРЕЛКА -->
    <!-- Привязана к ПРАВОМУ краю списка -->
    <FrameLayout
        android:id="@+id/flArrowContainer"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_glass_circle"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/tvCollectionName"
        app:layout_constraintStart_toEndOf="@id/tvCollectionName"
        app:layout_constraintTop_toTopOf="@id/tvCollectionName">

        <ImageView
            android:id="@+id/ivItemArrow"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow_down"
            app:tint="#333333" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>